<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		   xmlns:s="library://ns.adobe.com/flex/spark"
		   xmlns:mx="library://ns.adobe.com/flex/mx"
		   xmlns:c="project.libsys.components.*"
		   width="100%" height="100%" layout="absolute">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import project.libsys.components.PublisherManageDialog;
			
			protected function pubListButton_clickHandler(event:MouseEvent):void
			{
				var dlg : PublisherManageDialog = new PublisherManageDialog();
				dlg.show(null, true);
			}

		]]>
	</fx:Script>
	
	<c:ToolBar>
		<c:IconButton label="增加" icon="@Embed(source='/assets/add.png')"/>
		<c:IconButton label="删除" icon="@Embed(source='/assets/del.png')"/>
		<c:IconButton label="修改" icon="@Embed(source='/assets/edit.png')"/>
		<c:IconButton id="pubListButton" label="出版商" icon="@Embed(source='/assets/publisher.png')"
					  click="pubListButton_clickHandler(event)"/>
	</c:ToolBar>
	<mx:DataGrid top="30" width="100%" bottom="2">
		<mx:columns>
			<mx:DataGridColumn headerText="列 1" dataField="col1"/>
			<mx:DataGridColumn headerText="列 2" dataField="col2"/>
			<mx:DataGridColumn headerText="列 3" dataField="col3"/>
		</mx:columns>
	</mx:DataGrid>
</mx:Module>
