		   xmlns:s="library://ns.adobe.com/flex/spark"
		   xmlns:mx="library://ns.adobe.com/flex/mx"
		   xmlns:c="project.libsys.components.*"
		   width="100%" height="100%" layout="absolute">
	<fx:Script>
		<![CDATA[
			import project.libsys.skins.IconButtonSkin;
			import project.libsys.skins.ToolBarSkin;
		]]>
	</fx:Script>
	<c:ToolBar>
		<c:IconButton icon="@Embed(source='/assets/add.png')" label="增加"/>
		<c:IconButton label="删除" icon="@Embed(source='/assets/del.png')"/>
		<c:IconButton label="修改" icon="@Embed(source='/assets/edit.png')"/>
	</c:ToolBar>
	<mx:DataGrid top="30" width="100%" bottom="2">
		<mx:columns>
			<mx:DataGridColumn headerText="列 1" dataField="col1"/>
			<mx:DataGridColumn headerText="列 2" dataField="col2"/>
