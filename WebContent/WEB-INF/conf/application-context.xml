<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:flex="http://www.springframework.org/schema/flex"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   					   http://www.springframework.org/schema/flex
	   					   http://www.springframework.org/schema/flex/spring-flex-1.0.xsd">
	   					   
	<!-- 属性文件 -->
	<bean id="propertyConfigurer"
		  class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>WEB-INF/conf/database.properties</value>
		</property>
	</bean>
	
	<bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url">
            <value>${jdbc.url.mysql}</value>
        </property>
        <property name="driverClassName">
            <value>${jdbc.driver.mysql}</value>
        </property>
        <property name="username">
            <value>${jdbc.username.mysql}</value>
        </property>
        <property name="password">
            <value>${jdbc.password.mysql}</value>
        </property>
    </bean>
	
    <bean id="dao" abstract="true">
    	<property name="dataSource" ref="dataSource"/>
    </bean>
    
    <bean id="userDao" parent="dao"
    	  class="project.libsys.dao.UserDao"/>
    <bean id="bookDao" parent="dao"
    	  class="project.libsys.dao.BookDao"/>
    <bean id="publisherDao" parent="dao"
    	  class="project.libsys.dao.PublisherDao"/>
    <bean id="lendDao" parent="dao"
    	  class="project.libsys.dao.LendDao"/>
    <bean id="readerDao" parent="dao"
    	  class="project.libsys.dao.ReaderDao"/>
    	  
    <bean id="systemService"
    	  class="project.libsys.service.impl.SystemServiceImpl">
    	  <property name="userDao" ref="userDao"/>
	</bean>
	<bean id="publisherService"
    	  class="project.libsys.service.impl.PublisherServiceImpl">
    	  <property name="publisherDao" ref="publisherDao"/>
	</bean>
	<bean id="bookService"
    	  class="project.libsys.service.impl.BookServiceImpl">
    	  <property name="bookDao" ref="bookDao"/>
	</bean>
	<bean id="readerService"
    	  class="project.libsys.service.impl.ReaderServiceImpl">
    	  <property name="readerDao" ref="readerDao"/>
	</bean>
	<bean id="userService"
    	  class="project.libsys.service.impl.UserServiceImpl">
    	  <property name="userDao" ref="userDao"/>
	</bean>
	<bean id="lendService"
    	  class="project.libsys.service.impl.LendServiceImpl">
    	  <property name="lendDao" ref="lendDao"/>
	</bean>
	
	<!-- spring-blazeds configuration -->
	<flex:message-broker>
		<flex:remoting-service default-channels="my-amf"/>
	</flex:message-broker>
	
	<flex:remoting-destination ref="systemService"/>
	<flex:remoting-destination ref="publisherService"/>
	<flex:remoting-destination ref="bookService"/>
	<flex:remoting-destination ref="readerService"/>
	<flex:remoting-destination ref="userService"/>
	<flex:remoting-destination ref="lendService"/>

</beans>